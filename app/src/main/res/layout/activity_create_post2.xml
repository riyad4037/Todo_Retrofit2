<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".CreatePostActivity2">

    <EditText
        android:id="@+id/UserIdPost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/TitlePost"
        android:hint="UserId"
        android:textSize="25sp"
        android:inputType="number"
        />


    <EditText
        android:id="@+id/TitlePost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/UserIdPost"
        app:layout_constraintBottom_toTopOf="@id/BodyPost"
        android:textSize="25sp"
        android:hint="Title"
        android:inputType="text"
        />
    <EditText
        android:id="@+id/BodyPost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TitlePost"
        app:layout_constraintBottom_toTopOf="@+id/CreatePostButton"
        android:hint="Body"
        android:textSize="25sp"
        android:inputType="textAutoCorrect"
        />

    <Button
        android:id="@+id/CreatePostButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TitlePost"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="25sp"
        android:text="Create Post"/>

</androidx.constraintlayout.widget.ConstraintLayout>